<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_d_file_container"
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:orientation="horizontal"
    android:background="@drawable/button9"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp">
    <TextView
        android:id="@+id/d_file_project_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:textSize="12dp"
        android:maxLines="1"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="데이터과학"/>


    <TextView
        android:id="@+id/d_file_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:gravity="left|center"
        android:paddingLeft="20dp"
        android:textSize="12dp"
        android:textColor="@color/black"
        android:maxLines="1"
        android:text="파일명"/>
    <TextView
        android:id="@+id/d_file_new_mark"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@drawable/alert_new_message_form"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="N"
        android:textColor="@color/white"
        android:textSize="8dp"
        android:textStyle="bold" />

</LinearLayout>