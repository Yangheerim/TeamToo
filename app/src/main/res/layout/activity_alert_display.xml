<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/alert_display_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        app:title="알림 표시"/>

    <LinearLayout
        android:id="@+id/alert_display_popup"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/color_change"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingVertical="7dp"
            android:text="알림 팝업"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/alert_popup_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="알림 팝업"
            android:textColor="@color/darkGray"
            android:textSize="12dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="0.5dp"
        android:background="@color/gray"/>

    <LinearLayout
        android:id="@+id/alert_display_loc"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/color_change"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingVertical="7dp"
            android:text="알림 팝업 위치"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/alert_popup_loc_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="상단"
            android:textColor="@color/darkGray"
            android:textSize="12dp" />

    </LinearLayout>


</LinearLayout>