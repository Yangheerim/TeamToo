<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/setting_myInfo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/color_change"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:padding="5dp"
                android:src="@drawable/ic_person_black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingVertical="15dp"
                android:text="내 정보"
                android:textSize="20dp" />
        </LinearLayout>

        <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>

        <LinearLayout
            android:id="@+id/setting_announce"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/color_change"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:padding="5dp"
                android:src="@drawable/ic_announcement_black_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingVertical="15dp"
                android:text="공지사항"
                android:textSize="20dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>

        <LinearLayout
            android:id="@+id/setting_versionInfo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/color_change"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:padding="5dp"
                android:src="@drawable/ic_error_outline_black_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingVertical="15dp"
                android:text="버전정보"
                android:textSize="20dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>

        <LinearLayout
            android:id="@+id/setting_timeTable"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/color_change"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:padding="5dp"
                android:src="@drawable/ic_access_time_black_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingVertical="15dp"
                android:text="시간표"
                android:textSize="20dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>

        <LinearLayout
            android:id="@+id/setting_alert"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/color_change"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:padding="5dp"
                android:src="@drawable/ic_notifications_black_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingVertical="15dp"
                android:text="알림"
                android:textSize="20dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>

        <LinearLayout
            android:id="@+id/setting_help"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/color_change"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:padding="5dp"
                android:src="@drawable/ic_thumb_up_black_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingVertical="15dp"
                android:text="도움말"
                android:textSize="20dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>

    </LinearLayout>
</FrameLayout>